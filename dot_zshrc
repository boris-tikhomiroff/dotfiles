export ZSH="$HOME/.oh-my-zsh"
fpath+=("$(brew --prefix)/share/zsh/site-functions")

ZSH_THEME=""

plugins=(
  git
  brew
  common-aliases
  node
  npm
  sudo
  yarn
  z
  colored-man-pages
  colorize
  zsh-syntax-highlighting
  zsh-autosuggestions
  zsh-completions
  nvm
)

# FOR PYTHON HOMEBREW
export PATH="/usr/local/bin:$PATH"

source $ZSH/oh-my-zsh.sh

# INITIALIZE THE PROMPT SYSTEM
autoload -U promptinit; promptinit
prompt pure

zstyle :prompt:pure:path color "#48dbfb"
zstyle :prompt:pure:prompt:error color "#ee5253"
zstyle :prompt:pure:prompt:success color "#D980FA"
zstyle :prompt:pure:prompt:continuation color "#f368e0"

# AUTO SWITCH NVM VERSION
autoload -U add-zsh-hook
load-nvmrc() {
  local node_version="$(nvm version)"
  local nvmrc_path="$(nvm_find_nvmrc)"

  if [ -n "$nvmrc_path" ]; then
    local nvmrc_node_version=$(nvm version "$(cat "${nvmrc_path}")")

    if [ "$nvmrc_node_version" = "N/A" ]; then
      nvm install
    elif [ "$nvmrc_node_version" != "$node_version" ]; then
      nvm use
    fi
  elif [ "$node_version" != "$(nvm version default)" ]; then
    echo "Reverting to nvm default version"
    nvm use default
  fi
}
add-zsh-hook chpwd load-nvmrc
load-nvmrc

#chez moi test
